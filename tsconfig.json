{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": ["src/*"],
      "@auth/*": ["src/auth/*"],
      "@users/*": ["src/users/*"],
      "@security/*": ["src/security/*"],
      "@cache/*": ["src/cache/*"],
      "@audit/*": ["src/audit/*"],
      "@common/*": ["src/common/*"],
      "@database/*": ["src/database/*"],
      "@seeds/*":["/prisma/seeds/*"]
    }
  },
  "include": ["src/**/*","prisma/seeds/**/*.ts","prisma/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}